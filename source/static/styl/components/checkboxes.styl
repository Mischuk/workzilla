.checkboxes
  display inline-block
  vertical-align middle
  cursor default
  & + .checkboxes
    margin-left 15px
  label
    display inline-block
    vertical-align middle
    font-size 0
  input
    opacity 0
    font-size 0
    width 0
    height 0
    position absolute
    left -9999px
  .icon
    size(20px)
    display inline-block
    vertical-align middle
    border 1px solid #333
    border-radius $radius
    cursor pointer
  .label
    sn()
    font-style normal
    display inline-block
    vertical-align middle
    cursor pointer
    font-size 16px
    padding-left 5px
  input:checked + .icon
    box-shadow inset 0 0 0 4px #fff
    background #333