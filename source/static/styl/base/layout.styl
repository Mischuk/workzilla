$wrapper = 1200px
$gutter = 2%

.container
  height 100%

.wrapper
  clearfix()
  position relative
  max-width $wrapper
  height 100%
  padding-left 15px
  padding-right 15px
  margin-left auto
  margin-right auto

main
  display block
  max-width $wrapper
  padding 0 15px
  margin 0 auto
  position relative

// Grid layout
.row
  clearfix()
  .col
    float left
    width 100%
    margin ($gutter/2) 0
    @media XS
      &.xs1
        width 100%
        margin-left 0
        margin-right 0
        &:nth-child(2n+1),
        &:nth-child(3n+1),
        &:nth-child(4n+1),
        &:nth-child(6n+1)
          margin-left 0
          margin-right 0
      &.xs2
        width ((100% - $gutter)/2)
        margin-left $gutter
        &:nth-child(2n+1)
          margin-left 0
      &.xs3
        width ((100% - $gutter*2)/3)
        margin-left $gutter
        &:nth-child(3n+1)
          margin-left 0
      &.xs4
        width ((100% - $gutter*3)/4)
        margin-left $gutter
        &:nth-child(4n+1)
          margin-left 0
      &.xs6
