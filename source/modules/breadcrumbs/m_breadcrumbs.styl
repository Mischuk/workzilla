.m_breadcrumbs
  position relative
  ul
    cursor default
    font-size 0
    li
      font-size 16px
      display inline-block
      vertical-align middle
      &:after
        content '-'
        margin-left 5px
        margin-right 5px
      &:last-child:after
        display none
      a
        color #333
        &:hover
          text-decoration underline
      &:last-child
        a
          color #ee6e73
          cursor default
          text-decoration none
